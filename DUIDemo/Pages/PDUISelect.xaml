<Page x:Class="DUIDemo.Pages.PDUISelect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
      xmlns:local="clr-namespace:DUIDemo.Pages"
      xmlns:cov="clr-namespace:DUIDemo.Model.Converter"
      xmlns:uc="clr-namespace:DUIDemo.UerControls"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="PDUISelect" KeyDown="Page_KeyDown" PreviewKeyDown="Page_PreviewKeyDown">
    <Page.Resources>
        <cov:ComboBoxSelectToIsChecked x:Key="ComboBoxSelectToIsChecked"/>
        <cov:PopupIsOpenConverter x:Key="PopupIsOpenConverter"/>
        <Style x:Key="RadioButtonStyle_DUIDemo_GeneralSpeaker" TargetType="{x:Type RadioButton}" BasedOn="{StaticResource RadioButtonStyle_DUIDemo_SpeakerType}">
            <EventSetter Event="Checked" Handler="GeneralSpeakerRadioButton_Checked"/>
        </Style>

        <Style x:Key="RadioButtonStyle_DUIDemo_SpeakerStyle" TargetType="{x:Type RadioButton}" BasedOn="{StaticResource RadioButtonStyle_DUIDemo_SpeakerType}">
            <EventSetter Event="Checked" Handler="SpeakerStyleRadioButton_Checked"/>
        </Style>

        <Style x:Key="RadioButtonStyle_DUIDemo_Speaker" TargetType="{x:Type RadioButton}" BasedOn="{StaticResource RadioButtonStyle_DUIDemo_SpeakerBase}">
            <EventSetter Event="Checked" Handler="RadioButton_Checked"/>
        </Style>

    </Page.Resources>

    <Viewbox>
        <Grid Height="768" Width="1366" Background="#F5F7FA">
            <Grid.RowDefinitions>
                <RowDefinition Height="56"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="193"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Name="bd_Title" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="#303133" MouseLeftButtonDown="bd_Title_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="&#xe8e4;" Visibility="Collapsed" FontSize="24" Foreground="White" HorizontalAlignment="Left" Margin="30,0,0,0"
                           Style="{StaticResource TextBlockStyle_DUIDemo_iFont}">
                    </TextBlock>
                    <Image Visibility="Visible" Source="pack://application:,,,/DUIDemo;component/Resource/Images/bgTitle.png" Height="24" HorizontalAlignment="Left" Margin="30,0,0,0"
                            RenderOptions.BitmapScalingMode="Fant">
                    </Image>
                </Grid>
            </Border>
            <Button Grid.Column="1" Name="btn_Close" HorizontalAlignment="Right" Margin="0,0,20,0"
                    Style="{StaticResource ButtonStyle_DUIDemo_Close}"
                    Click="btn_Close_Click">
            </Button>
            <Grid Grid.Row="1" Grid.Column="0" Background="White">
                <StackPanel>
                    <RadioButton Name="rbt_ASR" Content="语音识别（ASR）" IsChecked="True" Margin="0,15,0,0"
                             Style="{StaticResource RadioButtonStyle_DUIDemo_TabItem}">
                    </RadioButton>
                    <RadioButton Name="rbt_TTS" Content="语音合成（TTS）" Visibility="Visible"
                             Style="{StaticResource RadioButtonStyle_DUIDemo_TabItem}">
                    </RadioButton>
                </StackPanel>
            </Grid>
            <Button Grid.Row="1" Height="40" Content="授权"
                    VerticalAlignment="Bottom" Margin="20"
                    Style="{StaticResource ButtonStyle_DUIDemo_Main}"
                    Click="btn_Auth_Click">
            </Button>

            <TabControl Grid.Row="1" Grid.Column="1" BorderThickness="0" Name="tab_main" Background="Transparent" TabStripPlacement="Left">
                <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=rbt_ASR,Path=IsChecked}">
                    <StackPanel Margin="20">
                        <Border Height="80" Background="White">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="语言：" Margin="20,0,0,0"
                                           Style="{StaticResource TextBlockStyle_DUIDemo_Normal}">
                                </TextBlock>
                                <ComboBox Name="cmb_ASRLanguage" Width="220" HorizontalAlignment="Left"
                                          DisplayMemberPath="Des" SelectedValuePath="Value"
                                          SelectionChanged="cmb_ASRLanguage_SelectionChanged">
                                </ComboBox>
                                <TextBlock Text="识别：" Margin="30,0,0,0" Visibility="Visible" 
                                           Style="{StaticResource TextBlockStyle_DUIDemo_Normal}">
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" Visibility="Visible">
                                    <RadioButton Name="rbt_ASRCloud" Width="110" Content="在线识别" 
                                                 Style="{StaticResource RadioButtonStyle_DUIDemo_SpeakerType}"
                                                 Checked="rbt_ASRCloud_Checked">
                                    </RadioButton>
                                    <RadioButton Name="rbt_ASRNative" Width="110" Content="离线识别" Margin="10,0,0,0"
                                                 Style="{StaticResource RadioButtonStyle_DUIDemo_SpeakerType}"
                                                 Checked="rbt_ASRNative_Checked">
                                    </RadioButton>
                                </StackPanel>
                                <TextBlock Text="唤醒：" Margin="30,0,0,0" Visibility="Visible" 
                                           Style="{StaticResource TextBlockStyle_DUIDemo_Normal}">
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" Visibility="Visible">
                                    <RadioButton Name="rbt_Wakeup" Width="110" Content="唤醒模式" 
                                                 Style="{StaticResource RadioButtonStyle_DUIDemo_SpeakerType}"
                                                 Checked="rbt_Wakeup_Checked">
                                    </RadioButton>
                                    <RadioButton Name="rbt_UnWakeup" Content="非唤醒模式" Margin="10,0,0,0"
                                                 Style="{StaticResource RadioButtonStyle_DUIDemo_SpeakerType}"
                                                 Checked="rbt_UnWakeup_Checked">
                                    </RadioButton>
                                </StackPanel>
                                <ToggleButton Name="tbtn_ASR" Width="76" 
                                              HorizontalAlignment="Left" Margin="30,0,0,0"
                                        Style="{StaticResource ToggleButtonStyle_DUIDemo_Normal}" 
                                              Checked="tbtn_ASR_Checked" Unchecked="tbtn_ASR_Unchecked">
                                </ToggleButton>

                                <Grid Visibility="Collapsed">
                                    <TextBlock Name="tbl_Info" Visibility="Collapsed" Text="当前网络未连接" FontSize="14" Foreground="red" FontFamily="Microsoft Yahei" Margin="0,5,0,0">
                                    </TextBlock>
                                    <Button Name="btn_Clear" Height="30" Width="100" Content="清除" FontSize="14" HorizontalAlignment="Right"
                                        Style="{StaticResource ButtonStyle_DUIDemo_Lite}"
                                        Click="btn_Clear_Click" Margin="0,2,2,0">
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <TextBox Name="tb_ARS" Height="582" Margin="0,20,0,0" Foreground="#909399" FontSize="14" BorderThickness="0"
