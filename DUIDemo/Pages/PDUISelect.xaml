                                            </TabItem>
                                            <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=rbt_Women15,Path=IsChecked}">
                                                <RadioButton IsChecked="True" Content="清新女声小妖" Style="{StaticResource RadioButtonStyle_DUIDemo_Speaker}" Margin="10,0,0,0">
                                                </RadioButton>
                                            </TabItem>
                                            <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=rbt_Women16,Path=IsChecked}">
                                                <RadioButton IsChecked="True" Content="电台女声璃璃" Style="{StaticResource RadioButtonStyle_DUIDemo_Speaker}" Margin="10,0,0,0">
                                                </RadioButton>
                                            </TabItem>
                                            <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=rbt_Women17,Path=IsChecked}">
                                                <RadioButton IsChecked="True" Content="知性女声晶晶" Style="{StaticResource RadioButtonStyle_DUIDemo_Speaker}" Margin="10,0,0,0">
                                                </RadioButton>
                                            </TabItem>
                                            <TabItem Visibility="Collapsed" IsSelected="{Binding ElementName=rbt_Women18,Path=IsChecked}">
