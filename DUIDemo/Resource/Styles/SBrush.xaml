    <SolidColorBrush x:Key="Secondary.Pressed.Background" Color="#0087dc"/>
    <SolidColorBrush x:Key="Secondary.Pressed.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Secondary.Pressed.Border" Color="#0087dc"/>

    <SolidColorBrush x:Key="Secondary.Disabled.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Secondary.Disabled.Foreground" Color="#90CAF9"/>
    <SolidColorBrush x:Key="Secondary.Disabled.Border" Color="#90CAF9"/>
    <!--#endregion-->

    <!--#region 辅助按钮-->
    <SolidColorBrush x:Key="Auxiliary.Normal.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Auxiliary.Normal.Foreground" Color="#606266"/>
    <SolidColorBrush x:Key="Auxiliary.Normal.Border" Color="#DCDFE6"/>

    <SolidColorBrush x:Key="Auxiliary.MouseOver.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Auxiliary.MouseOver.Foreground" Color="#606266"/>
    <SolidColorBrush x:Key="Auxiliary.MouseOver.Border" Color="#2196f3"/>

