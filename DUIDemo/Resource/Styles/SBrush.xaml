    <SolidColorBrush x:Key="Auxiliary.Disabled.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Auxiliary.Disabled.Foreground" Color="#909399"/>
    <SolidColorBrush x:Key="Auxiliary.Disabled.Border" Color="#E4E7ED"/>
    <!--#endregion-->

    <!--#region 辅助按钮-->
    <SolidColorBrush x:Key="Auxiliary2.Normal.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Auxiliary2.Normal.Foreground" Color="#606266"/>
    <SolidColorBrush x:Key="Auxiliary2.Normal.Border" Color="#DCDFE6"/>

    <SolidColorBrush x:Key="Auxiliary2.MouseOver.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Auxiliary2.MouseOver.Foreground" Color="#606266"/>
    <SolidColorBrush x:Key="Auxiliary2.MouseOver.Border" Color="#2196f3"/>

    <SolidColorBrush x:Key="Auxiliary2.Pressed.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Auxiliary2.Pressed.Foreground" Color="#606266"/>
    <SolidColorBrush x:Key="Auxiliary2.Pressed.Border" Color="#0087dc"/>

    <SolidColorBrush x:Key="Auxiliary2.Disabled.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Auxiliary2.Disabled.Foreground" Color="#909399"/>
    <SolidColorBrush x:Key="Auxiliary2.Disabled.Border" Color="#E4E7ED"/>
    <!--#endregion-->
</ResourceDictionary>