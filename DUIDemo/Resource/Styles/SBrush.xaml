<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DUIDemo.Resource.Styles">
    
    <!--#region 主要按钮-->
    <SolidColorBrush x:Key="Main.Normal.Background" Color="#2196f3"/>
    <SolidColorBrush x:Key="Main.Normal.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Main.Normal.Border" Color="#2196f3"/>

    <SolidColorBrush x:Key="Main.MouseOver.Background" Color="#2babf6"/>
    <SolidColorBrush x:Key="Main.MouseOver.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Main.MouseOver.Border" Color="#2babf6"/>

    <SolidColorBrush x:Key="Main.Pressed.Background" Color="#0087dc"/>
    <SolidColorBrush x:Key="Main.Pressed.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Main.Pressed.Border" Color="#0087dc"/>

    <SolidColorBrush x:Key="Main.Disabled.Background" Color="#90caf9"/>
    <SolidColorBrush x:Key="Main.Disabled.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Main.Disabled.Border" Color="#90caf9"/>
    <!--#endregion-->

    <!--#region 次要按钮-->
    <SolidColorBrush x:Key="Secondary.Normal.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Secondary.Normal.Foreground" Color="#0097FA"/>
    <SolidColorBrush x:Key="Secondary.Normal.Border" Color="#2196f3"/>

    <SolidColorBrush x:Key="Secondary.MouseOver.Background" Color="#2196f3"/>
